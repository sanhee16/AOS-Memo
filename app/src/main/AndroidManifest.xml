<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sandy.memo">

    <application
        android:name="com.sandy.memo.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MvvmPattern">
        <activity
            android:name="com.sandy.memo.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sandy.memo.view.DataShowActivity"
            android:theme="@style/Theme.MvvmPattern" />
        <activity
            android:name="com.sandy.memo.view.MemoActivity"
            android:theme="@style/Theme.MvvmPattern" />
        <activity
            android:name="com.sandy.memo.view.MemoEditPageActivity"
            android:theme="@style/Theme.MvvmPattern" />
        <activity
            android:name="com.sandy.memo.view.SettingActivity"
            android:theme="@style/Theme.MvvmPattern" />
    </application>

</manifest>
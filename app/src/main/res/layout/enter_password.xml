<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="dialog"
            type="com.sandy.memo.util.EnterPassword" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:minHeight="150dp">

        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/notosan_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxWidth="250dp"
            android:textSize="@dimen/dialog_message_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/enter_password" />

        <TextView
            android:id="@+id/text_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_message"
            tools:text="0000" />


        <TextView
            android:id="@+id/text_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16dp"
            android:textColor="@color/warning"
            android:visibility="invisible"
            android:text="@string/check_password"
            app:layout_constraintBottom_toTopOf="@+id/text_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_password"/>
        <TextView
            android:id="@+id/text_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/notosan_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="1"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toTopOf="@+id/text_4"
            app:layout_constraintEnd_toStartOf="@+id/text_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_warning" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:fontFamily="@font/notosan_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="2"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/text_1"
            app:layout_constraintEnd_toStartOf="@+id/text_3"
            app:layout_constraintStart_toEndOf="@+id/text_1"
            app:layout_constraintTop_toTopOf="@+id/text_1" />

        <TextView
            android:id="@+id/text_3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:fontFamily="@font/notosan_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="3"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/text_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_2"
            app:layout_constraintTop_toTopOf="@+id/text_1" />


        <TextView
            android:id="@+id/text_4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:fontFamily="@font/notosan_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="4"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toTopOf="@+id/text_7"
            app:layout_constraintEnd_toStartOf="@+id/text_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_1" />

        <TextView
            android:id="@+id/text_5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:fontFamily="@font/notosan_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="5"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/text_4"
            app:layout_constraintEnd_toStartOf="@+id/text_6"
            app:layout_constraintStart_toEndOf="@+id/text_4"
            app:layout_constraintTop_toTopOf="@+id/text_4" />

        <TextView
            android:id="@+id/text_6"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:fontFamily="@font/notosan_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="6"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/text_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_5"
            app:layout_constraintTop_toTopOf="@+id/text_4" />


        <TextView
            android:id="@+id/text_7"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:fontFamily="@font/notosan_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="7"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toTopOf="@+id/text_reset"
            app:layout_constraintEnd_toStartOf="@+id/text_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_4" />

        <TextView
            android:id="@+id/text_8"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:fontFamily="@font/notosan_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="8"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/text_7"
            app:layout_constraintEnd_toStartOf="@+id/text_9"
            app:layout_constraintStart_toEndOf="@+id/text_7"
            app:layout_constraintTop_toTopOf="@+id/text_7" />

        <TextView
            android:id="@+id/text_9"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:fontFamily="@font/notosan_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="9"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/text_7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_8"
            app:layout_constraintTop_toTopOf="@+id/text_7" />

        <TextView
            android:id="@+id/text_reset"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:fontFamily="@font/notosan_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="reset"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintEnd_toStartOf="@+id/text_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_7" />

        <TextView
            android:id="@+id/text_0"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:fontFamily="@font/notosan_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="0"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/text_reset"
            app:layout_constraintEnd_toStartOf="@+id/text_erase"
            app:layout_constraintStart_toEndOf="@+id/text_reset"
            app:layout_constraintTop_toTopOf="@+id/text_reset" />

        <TextView
            android:id="@+id/text_erase"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:fontFamily="@font/notosan_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="erase"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/text_reset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_0"
            app:layout_constraintTop_toTopOf="@+id/text_reset" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/dialog_width"
            android:layout_height="@dimen/dialog_height"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/notosan_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/cancel"
            android:textColor="@color/purple_700"
            android:textSize="@dimen/dialog_btn_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_reset" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/dialog_width"
            android:layout_height="@dimen/dialog_height"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/notosan_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/accept"
            android:textColor="@color/purple_700"
            android:textSize="@dimen/dialog_btn_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>